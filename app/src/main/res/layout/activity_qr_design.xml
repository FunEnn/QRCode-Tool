<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".QRDesignActivity">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1976D2"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back_arrow"
            android:padding="12dp"
            android:contentDescription="返回"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="二维码美化"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 预览区域 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="#FFFFFF">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="fitCenter"
                        android:contentDescription="二维码预览" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 上传二维码区域 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传二维码"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#1976D2"/>

            <Button
                android:id="@+id/btnUploadQrCode"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="选择本地二维码图片"
                android:textColor="#1976D2"
                app:strokeColor="#1976D2"
                app:cornerRadius="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色风格"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#1976D2"/>

            <!-- 色板选择 GridLayout -->
            <GridLayout
                android:id="@+id/colorPaletteGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:columnCount="5"
                android:rowCount="3"
                android:alignmentMode="alignBounds">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#000000"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#1976D2"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#1976D2"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#D32F2F"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#D32F2F"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#388E3C"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#388E3C"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#7B1FA2"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#7B1FA2"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#FF9800"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#FF9800"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#0097A7"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#0097A7"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#5D4037"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#5D4037"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#455A64"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#455A64"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#C2185B"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#C2185B"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#512DA8"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#512DA8"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#0288D1"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#0288D1"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#00796B"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#00796B"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#689F38"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#689F38"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="#FF5722"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="#FF5722"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高级选项"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="#1976D2"/>

            <Button
                android:id="@+id/btnAddLogo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="上传中心 Logo"
                android:textColor="#1976D2"
                app:strokeColor="#1976D2"
                app:cornerRadius="8dp"/>

            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="保存二维码"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="点击预览图可保存到相册"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>